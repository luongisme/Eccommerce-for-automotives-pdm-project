<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pdm_project.LoginController"
            prefWidth="960" prefHeight="640" styleClass="root">


    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="app-bar">
            <children>
                <Label text="AutoParts Pro" styleClass="brand"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox spacing="24" alignment="CENTER_RIGHT">
                    <children>
                        <Hyperlink text="Page"/>
                        <Hyperlink text="Page"/>
                        <Hyperlink text="Page"/>
                        <Button text="login" styleClass="btn-pill"/>
                    </children>
                </HBox>
            </children>
            <padding><Insets top="10" right="16" bottom="10" left="16"/></padding>
        </HBox>
    </top>


    <center>
        <StackPane>
            <!-- Background image -->
            <ImageView fitWidth="960" preserveRatio="true">
                <image>
                    <Image url="@images/LoginImage.jpg"/> <!-- đặt ảnh vào resources/com/example/pdm_project/images/ -->
                </image>
            </ImageView>

            <!-- Semi-transparent overlay to improve contrast -->
            <Region styleClass="scrim"/>

            <!-- Form card -->
            <VBox spacing="10" maxWidth="480" styleClass="card">
                <children>
                    <VBox spacing="6">
                        <Label text="Email address" styleClass="label"/>
                        <TextField fx:id="emailField" promptText="email@yourdomain.com"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Password" styleClass="label"/>
                        <PasswordField fx:id="passwordField" promptText="••••••••"/>
                    </VBox>

                    <Button text="Submit" maxWidth="Infinity" onAction="#onSubmit" styleClass="btn-primary"/>

                    <Text text="Shop now" styleClass="hero-text"/> <!-- để giống chữ trong ảnh, có thể bỏ -->
                </children>
                <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
            </VBox>
        </StackPane>
    </center>


    <bottom>
        <VBox styleClass="footer">
            <children>
                <Separator/>
                <GridPane hgap="24" vgap="12" styleClass="footer-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>
                    <children>
                        <Label text="Site name" GridPane.columnIndex="0"/>
                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Topic"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="2">
                            <children>
                                <Label text="Topic"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="3">
                            <children>
                                <Label text="Topic"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                                <Hyperlink text="Page"/>
                            </children>
                        </VBox>
                    </children>
                    <padding><Insets top="14" right="16" bottom="14" left="16"/></padding>
                </GridPane>
            </children>
        </VBox>
    </bottom>
</BorderPane>
